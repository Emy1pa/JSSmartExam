<%- include('../layouts/header.ejs') %>

<div class="bg-wrapper">
  <div class="bg-overlay">
    <div class="register-box">
      <form action="/register" method="POST" class="form-wrapper needs-validation" novalidate>
        <div class="input-row">
          <input
            class="input-field"
            type="text"
            id="firstName"
            name="firstName"
            placeholder="First Name..."
            required />
          <input
            class="input-field"
            type="text"
            id="lastName"
            name="lastName"
            placeholder="Last Name..."
            required />
        </div>
        <div class="input-row">
          <input
            class="input-field"
            type="text"
            id="adresse"
            name="adresse"
            placeholder="Address..."
            required />
          <input
            class="input-field"
            type="date"
            id="birthday"
            name="date_de_naissance"
            placeholder="Birthday..."
            required />
        </div>
        <div class="input-row">
          <input
            class="input-field"
            type="email"
            id="email"
            name="email"
            placeholder="Email..."
            required />
          <input
            class="input-field"
            type="text"
            id="specialite"
            name="specialite"
            placeholder="Speciality..."
            required />
        </div>
        <div class="input-full-width">
          <input
            class="input-field mb-3"
            type="password"
            id="password"
            name="password"
            placeholder="Password..."
            required />
          <input
            class="input-field"
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            placeholder="Confirm Password..."
            required />
        </div>
        <button class="register-btn" type="submit">Register</button>
      </form>
      
      <div class="login-text">
        <p>Already have an account? <a href="./login">Login</a></p>
      </div>
    </div>
  </div>
</div>
