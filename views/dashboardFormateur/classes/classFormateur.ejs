<%- include('../../layouts/navbar.ejs') %>

<main class="container mt-5">
    <h1 class="text-center">Students Table</h1>
    
    <div class="row">
        <div class="col-md-12">
            <button id="addStudentBtn" class="btn btnAddStudents btn-lg mt-3 px-5 float-right">Add Student</button>
        </div>
    </div>
    
    
        <div class="table-responsive tabels">
            <table id="basic-datatable" class="table bg-white dt-responsive nowrap w-100">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Date of Birth</th>
                        <th>Registration Date</th>
                        <th>Address</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Class</th>
                    </tr>
                </thead>
                <tbody>
                    {<% if (students.length > 0) { %>
                        <% students.forEach(function(student) { %>
                        <tr>
                            <td><%= student.id %></td>
                            <td><%= student.email %></td>
                            <td><%= student.date_of_birth %></td>
                            <td><%= student.registration_date %></td>
                            <td><%= student.address %></td>
                            <td><%= student.first_name %></td>
                            <td><%= student.last_name %></td>
                            <td><%= student.class_name %></td>
                        </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="8">No students found</td>
                        </tr>
                    <% } %>
                    
                </tbody>
            </table>
        </div>

    
</main>

<%- include('../../layouts/script.ejs') %>
