<%- include('../../layouts/navbar.ejs') %>

<main class="container mt-5">
    <h1 class="text-center">Students Table</h1>
    
    <div class="row">
        <div class="col-md-12">
            <button id="addStudentBtn" class="btn btnAddStudents btn-lg mt-3 px-5 float-right">Add Student</button>
        </div>
    </div>
    
    <div class="table-responsive tabels">
        <table id="basic-datatable" class="table bg-white dt-responsive nowrap w-100">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Date of Birth</th>
                    <th>Registration Date</th>
                    <th>Address</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Class</th>
                </tr>
            </thead>
            <tbody>
                <% Apprenants.forEach(Appren => { %>
                    <tr>
                        <td><%= Appren.id %></td>
                        <td><%= Appren.email %></td>
                        <td><%= Appren.date_de_naissance %></td>
                        <td><%= Appren.date_inscription %></td>
                        <td><%= Appren.adresse %></td>
                        <td><%= Appren.firstname %></td>
                        <td><%= Appren.lastname %></td>
                        <td><%= Appren.class_name %></td> 
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    
</main>

<%- include('../../layouts/script.ejs') %>
