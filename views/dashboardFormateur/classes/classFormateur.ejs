<%- include('../../layouts/navbar.ejs') %>

<main class="container mt-5">
    <h1 class="text-center">Students Table</h1>
    
    <div class="row">
        <div class="col-md-12">
            <button id="addStudentBtn" class="btn btnAddStudents btn-lg mt-3 px-5 float-right">Add Student</button>
        </div>
    </div>
    
    
        <div class="table-responsive tabels">
            <table id="basic-datatable" class="table bg-white dt-responsive nowrap w-100">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Date of Birth</th>
                        <th>Registration Date</th>
                        <th>Address</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Class</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (Appren && Appren.length) { %>
                        <% Appren.forEach(Appr => { %>
                            <tr>
                                <td><%= Appr.id %></td>
                                <td><%= Appr.email %></td>
                                <td><%= Appr.date_de_naissance %></td>
                                <td><%= Appr.date_inscription %></td>
                                <td><%= Appr.adresse %></td>
                                <td><%= Appr.firstname %></td>
                                <td><%= Appr.lastname %></td>
                                <td><%= Appr.class_name %></td> 
                            </tr>
                        <% }); %>
                        <% } %>
                </tbody>
            </table>
        </div>

    
</main>

<%- include('../../layouts/script.ejs') %>
